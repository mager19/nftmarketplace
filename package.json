{
	"name": "proyecto-tailwind-browsersync",
	"version": "1.0.0",
	"description": "Proyecto sencillo con Tailwind CSS y BrowserSync",
	"scripts": {
		"start": "npm run tailwind & npm run browsersync",
		"tailwind": "npx tailwindcss -i ./src/tailwind.css -o ./src/output.css --watch",
		"browsersync": "browser-sync start --server 'src' --files './src/output.css, ./src/**/*.html'"
	},
	"devDependencies": {
		"browser-sync": "^2.27.7",
		"tailwindcss": "^3.0.0"
	},
	"dependencies": {
		"slideout": "^1.0.1"
	}
}
